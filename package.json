    "prettier": "prettier --write 'src/**/*.{js,ts}'",
    "preversion": "npm-run-all --parallel typecheck lint",
    "start": "NODE_ENV=production node dist/server.js",
    "test": "jest --runInBand --detectOpenHandles",
    "typecheck": "tsc --noEmit",
    "version": "yarn build"
  },
